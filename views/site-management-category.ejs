<%- include("partials/header") %>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <%- include("partials/sidebar") %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <%- include("partials/topbar") %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-flex flex-row justify-content-between mb-4">
            <h1 class="h3 text-gray-800"><a href="/site-management">Site Management</a> <span
                class="directory-nav title-case"> > <%= type %> </span></h1>
            <% if (department == "Business Development") { %>
            <% var userHasCreateAccess = scope.find(function(scope) {
                return scope == "create" ? true : false;
              });
              if (userHasCreateAccess) {
            %>
            <a href="#" data-toggle="modal" data-target="#addCategoryModal" class="btn btn-info btn-icon-split">
              <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
              </span>
              <span class="text">Category</span>
            </a>
            <% } %>
            <% } %>
          </div>

          <div class="d-flex flex-row justify-content-around flex-wrap">

            <% 
              if (categories.length > 0) {
                for(var i = 0; i < categories.length; i++) { 
                  var categoryImage = "";

                  if (categories[i].category.toLowerCase() == "large format") {
                    categoryImage = "large-format";
                  } else if (categories[i].category.toLowerCase() == "aircast") {
                    categoryImage = "aircast";
                  } else if (categories[i].category.toLowerCase() == "lighted lamp post") {
                    categoryImage = "lighted-lamp-post";
                  } else if (categories[i].category.toLowerCase() == "public transportation") {
                    categoryImage = "public-transportation";
                  } else if (categories[i].category.toLowerCase() == "foot bridge") {
                    categoryImage = "foot-bridge";
                  } else if (categories[i].category.toLowerCase() == "waiting shed") {
                    categoryImage = "waiting-shed";
                  } else if (categories[i].category.toLowerCase() == "gasoline station") {
                    categoryImage = "gasoline-station";
                  } else if (categories[i].category.toLowerCase() == "malls") {
                    categoryImage = "malls";
                  } else if (categories[i].category.toLowerCase() == "public market") {
                    categoryImage = "public-market";
                  } else if (categories[i].category.toLowerCase() == "hospitals") {
                    categoryImage = "hospitals";
                  } else if (categories[i].category.toLowerCase() == "villages") {
                    categoryImage = "villages";
                  } else if (categories[i].category.toLowerCase() == "government offices") {
                    categoryImage = "government-offices";
                  } else if (categories[i].category.toLowerCase() == "universities") {
                    categoryImage = "universities";
                  } else if (categories[i].category.toLowerCase() == "corporate offices") {
                    categoryImage = "corporate-offices";
                  } else if (categories[i].category.toLowerCase() == "supermarkets") {
                    categoryImage = "supermarkets";
                  } else if (categories[i].category.toLowerCase() == "clinics") {
                    categoryImage = "clinics";
                  } else if (categories[i].category.toLowerCase() == "terminals") {
                    categoryImage = "terminals";
                  } else if (categories[i].category.toLowerCase() == "convenience store") {
                    categoryImage = "convenience-store";
                  } else {
                    categoryImage = "default";
                  }
            %>
            <div class="col-sm-6 col-md-6 mb-4"
              onclick="goTo('/site-management/<%= type %>/<%= categories[i].category_id %>')">
              <div class="card hover p-0">
                <img src="/img/categories/<%= categoryImage %>.png" class="lazyload img-round-top" alt="Avatar"
                  style="width:100%">
                <div class="container mt-3">
                  <h5><b><%= categories[i].category %></b></h5>
                  <p><i class="fas fa-ad"></i> Sites: <%= categories[i].total %></p>
                </div>
              </div>
            </div>
            <%
                }
              } else { 
            %>
            <h3 class="mt-5">There's no category found in the database. Please add, thanks!</h3>
            <%
              }
            %>

          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <div class="modal fade" id="addCategoryModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Add Category</h5>
              <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">Ã—</span>
              </button>
            </div>
            <div class="modal-body">
              <form>
                <div class="form-group">
                  <label for="txtCategory">Category</label>
                  <input type="hidden" class="form-control" id="txtTypeId" value="<%= type_id %>">
                  <input type="text" class="form-control" id="txtCategory" placeholder="ex. Aircast">
                </div>
                <%# <div class="form-group">
                  <label for="exampleFormControlFile1">Photo</label>
                  <input type="file" class="form-control-file" disabled id="exampleFormControlFile1">
                </div> %>
              </form>
            </div>
            <div class="modal-footer">
              <button class="btn btn-danger" type="button" data-dismiss="modal">Cancel</button>
              <button id="btnAddCategory" class="btn btn-primary" type="button">Add</button>
            </div>
          </div>
        </div>
      </div>

      <%- include("partials/footer") %>

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>
  <script src="/js/toastr.min.js"></script>
  <script src="/js/lazyload.js"></script>

  <script src="/js/cities.js"></script>
  <script src="/js/provinces.js"></script>
  <script src="/js/regions.js"></script>
  <script src="/js/notifications.js"></script>
  <script src="/js/site-management.js"></script>
</body>

</html>