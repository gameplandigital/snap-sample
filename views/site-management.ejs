<%- include("partials/header") %>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <%- include("partials/sidebar") %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <%- include("partials/topbar") %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-flex flex-row justify-content-between mb-4">
            <h1 class="h3 text-gray-800">Site Management <span class="directory-nav title-case"></span></h1>
          </div>

          <div class="d-flex flex-row justify-content-around flex-wrap">

            <% 
              if (types.length > 0) {
                for(var i = 0; i < types.length; i++) { 
            %>
            <div class="col-md-6 mb-4" onclick="goTo('/site-management/<%= types[i].type %>')">
              <div class="card hover p-0">
                <img src="/img/type-<%= types[i].type %>.jpg" class="lazyload img-round-top" alt="Avatar"
                  style="width:100%">
                <div class="container mt-3">
                  <h5><b><%= types[i].type %></b></h5>
                  <p><i class="fas fa-folder"></i> Categories: <%= types[i].total %></p>
                </div>
              </div>
            </div>
            <%
                }
              } else { 
            %>
            <h3 class="mt-5">There's no type found in the database. Please add, thanks!</h3>
            <%
              }
            %>

          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <%- include("partials/footer") %>

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>
  <script src="/js/toastr.min.js"></script>
  <script src="/js/lazyload.js"></script>

  <script src="/js/cities.js"></script>
  <script src="/js/provinces.js"></script>
  <script src="/js/regions.js"></script>
  <script src="/js/notifications.js"></script>
  <script src="/js/site-management.js"></script>
</body>

</html>