<%- include("partials/header") %>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <%- include("partials/sidebar"); %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <%- include("partials/topbar") %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Notifications</h1>
            <%# <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a> %>
          </div>

          <!-- Content Row -->
          <div class="row">

            <div class="col-md-12 mb-5">
              <% if (notifications.length > 0) { %>
              <% for (var i = 0; i < notifications.length; i++ ) { %>
              <% var n = notifications[i]; %>
              <a class="text-secondary" href="<%= n.link %>" onclick="updateNotificationSeen(<%= n.un_id %>)"
                style="text-decoration: none;">
                <div
                  class="card d-flex flex-row align-items-center w-100 mb-2 shadow-sm <%= (!n.is_seen) ? "not-seen" : null %>">
                  <div class="card-body">
                    <div class="d-flex flex-row">
                      <div class="mr-3">
                        <% if (n.type == "acquired") { %>
                        <div class="icon-circle bg-primary">
                          <i class="fas fa-location-arrow text-white"></i>
                        </div>
                        <% } else if (n.type == "sold") { %>
                        <div class="icon-circle bg-success">
                          <i class="fas fa-donate text-white"></i>
                        </div>
                        <% } %>
                      </div>
                      <div>
                        <div class="small text-gray-500"><%= moment(n.date_time).format("MMMM DD, YYYY") %>
                        </div>
                        <%= n.text %>
                      </div>
                    </div>
                  </div>
                </div>
              </a>
              <% (i == 5) ? i = notifications.length : null; %>
              <% } %>
              <% } else { %>
              <a class="text-secondary" href="#" style="text-decoration: none;">
                <div
                  class="card d-flex flex-row align-items-center w-100 mb-2 shadow-sm">
                  <div class="card-body">
                    <div class="d-flex flex-row">
                      You don't have notification right now.
                    </div>
                  </div>
                </div>
              </a>
              <% } %>

            </div>

          </div>
          <!-- End of Content Wrapper -->


        </div>
        <!-- End of Page Wrapper -->
        
        <%- include("partials/footer") %>

        <!-- Scroll to Top Button-->
        <%# <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
      </a> %>

        <!-- Bootstrap core JavaScript-->
        <script src="/vendor/jquery/jquery.min.js"></script>
        <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="/js/sb-admin-2.min.js"></script>
        <script src="/js/darkbox.min.js"></script>
        <script src="/js/lazyload.js"></script>
        <script src="/js/cities.js"></script>
        <script src="/js/provinces.js"></script>
        <script src="/js/regions.js"></script>
        <script src="/js/notifications.js"></script>

</body>

</html>